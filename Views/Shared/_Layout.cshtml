<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyAutoPartsHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EasyAutoPartsHub.styles.css" asp-append-version="true" />
    <link href="~/lib/font-aweasome/fontawesome.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/font-aweasome/solid.min.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="vh-100 overflow-hidden">
    <div class="d-flex h-100">
        <!-- Sidebar à esquerda -->
        <nav class="d-flex flex-column bg-info-subtle border-end shadow-lg p-3" style="width: 250px;">
            <div class="mb-4">
                <i class="fa-solid fa-store me-2"></i>
                <span class="fw-bold">EasyAutoPartsHub</span>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-dark sidebar-hover" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-dark sidebar-hover d-flex justify-content-between align-items-center" data-bs-toggle="collapse" href="#cadastrosSubmenu" role="button" aria-expanded="false" aria-controls="cadastrosSubmenu">
                        <span>Cadastros</span>
                        <i class="fa-solid fa-chevron-down transition" id="cadastrosArrow"></i>
                    </a>
                    <div class="collapse ps-3" id="cadastrosSubmenu">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-dark sidebar-hover" asp-controller="Produto" asp-action="Index">Produtos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark sidebar-hover" asp-controller="Grupo" asp-action="Index">Grupos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark sidebar-hover" asp-controller="#" asp-action="#">Clientes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark sidebar-hover" asp-controller="#" asp-action="#">Fornecedores</a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-dark sidebar-hover" asp-controller="#" asp-action="#">Pedidos</a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-dark sidebar-hover" asp-controller="#" asp-action="#">Relatórios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark sidebar-hover" asp-controller="#" asp-action="#">Financeiro</a>
                </li>
            </ul>
        </nav>

        <!-- Conteúdo principal -->
        <div class="flex-grow-1 p-3 overflow-auto">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <!--Loading-->
    <div id="ajax-loader" class="d-none position-fixed top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 z-3 d-flex justify-content-center align-items-center">
        <div class="text-center text-white">
            <div class="spinner-border text-light" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <div class="mt-3">Aguarde...</div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/font-aweasome/fontawesome.min.js" asp-append-version="true"></script>
    <script src="~/lib/font-aweasome/solid.min.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert2.all.min.js" asp-append-version="true"></script>
    <script>
        const submenu = document.getElementById('cadastrosSubmenu');
        const arrow = document.getElementById('cadastrosArrow');

        submenu.addEventListener('show.bs.collapse', function () {
            arrow.classList.add('rotate-180');
        });

        submenu.addEventListener('hide.bs.collapse', function () {
            arrow.classList.remove('rotate-180');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
