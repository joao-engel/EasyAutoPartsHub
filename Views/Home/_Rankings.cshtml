@model DashboardRankingModel

<!-- Coluna: Ranking de Clientes -->
<div class="card shadow-lg h-100">
    <div class="card-body">
        <h6 class="text-muted mb-3">Ranking de Clientes</h6>

        <div class="table-responsive">
            <table class="table table-sm table-hover align-middle mb-0">
                <thead class="text-muted small">
                    <tr class="shadow-sm">
                        <th>Cliente</th>
                        <th class="text-end">Total Faturado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model.Clientes.OrderBy(x => x.Posicao))
                    {
                        <tr>
                            <td>@cliente.Cliente</td>
                            <td class="text-end fw-semibold text-success">R$ @cliente.Valor.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>