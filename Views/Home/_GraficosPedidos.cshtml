        <div class="btn-group" role="group" aria-label="Visualização">
            <input type="radio" class="btn-check" name="visao" id="visaoMes" value="mes" autocomplete="off" checked>
            <label class="btn btn-outline-primary btn-sm" for="visaoMes">Mensal</label>

            <input type="radio" class="btn-check" name="visao" id="visaoAno" value="ano" autocomplete="off">
            <label class="btn btn-outline-primary btn-sm" for="visaoAno">Anual</label>
        </div>
    </div>
</div>

